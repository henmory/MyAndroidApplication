<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.henmory.fragementdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:id="@+id/frag_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.henmory.fragementdemo.MyFragment"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            />
        <Button
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove"
            android:onClick="remove"/>
        <Button
            android:id="@+id/btn_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rename"
            android:onClick="rename"/>
        <TextView
            android:id="@+id/tv_show_from_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/frag_my1"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
